<%- include("./partials/header.ejs")%>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Add New Student</h2>
                <form method="post">
                    <div class="md-3">
                        <label for="name" class="form-label">Name</label>
                        <input type="text" class="form-control" name="name" id="name" required>
                    </div>
                    <div class="md-3">
                        <label for="age" class="form-label">Age</label>
                        <input type="text" class="form-control" name="age" id="age" required>
                    </div>
                    <div class="md-3">
                        <label for="fees" class="form-label">Fees</label>
                        <input type="text" class="form-control" name="fees" id="fees" required>
                    </div>
                    <button type="submit" class="btn btn-primary mt-5">Submit</button>
                </form>
            </div>

            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-danger text-center">List Of Students</h2>
                <%# Show All Data %>
                    <table class="table table-striped table-hover">
                        <thead>
                            <tr>
                                <th scope="col">No</th>
                                <th scope="col">Name</th>
                                <th scope="col">Age</th>
                                <th scope="col">Fees</th>
                                <th scope="col">Action</th>
                            </tr>
                        </thead>
                        <tbody>
                            <tr>
                                <% var i=1%>
                                    <% data.forEach((item)=> { %>

                                        <td>
                                            <%= i++%>
                                        </td>
                                        <td>
                                            <%= item.name %>
                                        </td>
                                        <td>
                                            <%= item.age %>
                                        </td>
                                        <td>
                                            <%= item.fees %>
                                        </td>
                                        <td>
                                            <form action="/student/edit/<%= item._id%>" method="get" class="d-inline">
                                                <button class="btn" type="submit"><i
                                                        class="fas fa-pen-square text-info"></i></button>
                                            </form>
                                            <form action="/student/delete/<%= item._id%>" method="post">
                                                <button class="btn" type="submit"><i
                                                        class="fas fa-trash text-danger"></i></button>
                                            </form>
                                        </td>
                            </tr>

                            <%})%>
                        </tbody>
                    </table>
            </div>
        </div>
    </div>
    <%- include("./partials/footer.ejs")%>