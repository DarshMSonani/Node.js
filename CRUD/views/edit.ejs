<%- include("./partials/header.ejs")%>

    <div class="container">
        <div class="row">
            <div class="col-sm-6 mt-5">
                <h2 class="alert alert-success text-center">Update Student</h2>
                <form method="post" action="/student/update/<%= data._id%>">
                    <div class="md-3">
                        <label for="name" class="form-label">

                        </label>
                        <input type="text" class="form-control" name="name" id="name" required value="<%= data.name %>">
                    </div>
                    <div class="md-3">
                        <label for="age" class="form-label">
                        </label>
                        <input type="text" class="form-control" name="age" id="age" required value="<%= data.age %>">
                    </div>
                    <div class="md-3">
                        <label for="fees" class="form-label">
                        </label>
                        <input type="text" class="form-control" name="Fees" id="fees" required value="<%= data.fees %>">

                    </div>

                    <button type="submit" class="btn btn-outline-warning mt-5">Update</button>
                    <button type="submit" class="btn btn-outline-secondary mt-5">Back To Home</button>
                </form>
            </div>
        </div>
    </div>
    <%- include("./partials/footer.ejs")%>